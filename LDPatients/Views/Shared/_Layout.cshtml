<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LDPatients</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img src="~/lib/images/national-cancer-institute-NFvdKIhxYlU-unsplash.jpg" style="height: 100px; width: 120px"/>
                <a class="navbar-brand" style="text-align:center" asp-area="" asp-controller="Home" asp-action="Index">Conestoga Clinic</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="LDCountry" asp-action="Index">Countries</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="LDConcentrationUnit" asp-action="Index">Concentrations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="LDDiagnosisCategory" asp-action="Index">Diagnosis Categories</a>
                        </li>                        
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="LDDispensingUnit" asp-action="Index">Dispensing Units</a>
                        </li>  
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="LDMedicationType" asp-action="Index">Med Types</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <!--Using inline style to position the email address and Home & Privacy link -->
        <div style="display:flex; flex-direction:row; justify-content:space-between;">
            <div style="margin-left: 20px">
                &copy; 2021 - <a href="mailto:Ldeng2430@@conestogac.on.ca">Li Deng Section 2</a> <!--Adding email address-->
            </div>
            <!--Adding the Home & Privacy link-->
            <div style="margin-right:20px">
                <ul  style="list-style: none; display:flex; flex-direction:row">
                    <li style="margin-right: 10px;">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
        </div>
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
